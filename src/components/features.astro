---
// @ts-ignore
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import landingCustomDomain from "../assets/landing_custom_domain.png";
import landingResponsive from "../assets/publish_as_responsive_landing.png";
import landingCustomFavicon from "../assets/custom_favicon_landing.png";
import landingPasswordProtection from "../assets/password_protection_landing.png";
import landingProjectShowcase from "../assets/multiple_project_landing.png";

const features = [
  {
    title: "Custom Domain",
    description:
      "Connect an existing custom domain to make your site truly yours. We provide guidance and support.",
    image: {
      src: landingCustomDomain,
      alt: "Custom Domain Feature",
    },
  },
  {
    title: "Publish as Responsive Design",
    description:
      "With Figma's new responsive prototype capability, your designs will adapt to different screen sizes.",
    image: {
      src: landingResponsive,
      alt: "Publish as Responsive Design Feature",
    },
  },
  {
    title: "Custom Favicon",
    description:
      "Brand your site with a unique favicon that appears in browser tabs and bookmarks.",
    image: {
      src: landingCustomFavicon,
      alt: "Custom Favicon Feature",
    },
  },
  {
    title: "Password Protection",
    description:
      "Secure your confidential work or NDA projects with password protection.",
    image: {
      src: landingPasswordProtection,
      alt: "Password Protection Feature",
    },
  },
  {
    title: "User Testing",
    description:
      "Collect real feedback on your portfolio. Testers complete tasks while recording audio think-aloud feedback, and AI analyzes transcripts to surface insights automatically.",
    image: {
      src: landingProjectShowcase,
      alt: "User Testing Feature",
    },
  },
  {
    title: "Portfolio Analytics",
    description:
      "See who's viewing your portfolio. Track visitor counts, geographic locations, traffic sources, and engagement over time to understand what's working.",
    image: {
      src: landingResponsive,
      alt: "Portfolio Analytics Feature",
    },
  },
];
---

<div class="mt-10 md:mt-0">
  <h2
    class="text-3xl md:text-4xl lg:text-5xl font-bold lg:tracking-tight text-center">
    Why choose Figmafolio
  </h2>
  <p class="text-base md:text-lg mt-3 md:mt-4 text-slate-600 text-center">
    Convert Figma designs to websites with professional features
  </p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-8 mt-6 md:mt-12">
    {
      features.map((item) => (
        <div class="flex flex-col md:flex-row items-center md:items-center gap-4 md:gap-6 bg-slate-100 rounded-2xl p-4 md:p-8 shadow-sm transition-all duration-300 hover:shadow-md hover:scale-[1.025] group cursor-pointer text-center md:text-left">
          <div class="flex-shrink-0 flex justify-center md:block w-full md:w-auto">
            <Image
              src={item.image.src}
              alt={item.image.alt}
              width={86}
              height={86}
              class="rounded-lg transition-transform duration-300 group-hover:-translate-y-2 group-hover:scale-105 mx-auto md:mx-0"
            />
          </div>
          <div>
            <h3 class="font-bold text-lg md:text-2xl text-slate-900 mb-1 md:mb-2">
              {item.title}
            </h3>
            <p class="text-slate-500 text-sm md:text-lg leading-relaxed">
              {item.description}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</div>
